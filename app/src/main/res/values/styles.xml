<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Head">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF8E1</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Head.Team1">
        <item name="android:background">#1565C0</item>
    </style>

    <style name="Head.Team2">
        <item name="android:background">#9E9D24</item>
    </style>

    <style name="Score">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="PointType">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PointType.Value">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="StatLine">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="StatLine.Team1">
        <item name="android:background">#BBDEFB</item>
    </style>

    <style name="StatLine.Team2">
        <item name="android:background">#F0F4C3</item>
    </style>

</resources>
